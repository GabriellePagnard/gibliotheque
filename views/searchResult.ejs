<%- include('partials/header'); %>
<main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
  <div class="pure-g">
    <article class="post pure-u-1">
      <header>
      <h2>Résultats pour la recherche '<%= query %>'</h2>
     </header>
     <div class="post-content">
      <h3><%=filteredFilms.length %> résultat<%= filteredFilms.length >= 2 ? "s":"" %></h3>

      <% if (filteredFilms.length > 0){%>
        <ul>
          <% for (films of filteredFilms){ %>
            <li>
              <a href="/films/<%=films.id%>"><%=films.title%></a>
            </li>
          <% } %>
        </ul>
      <% } %>
    </div>

